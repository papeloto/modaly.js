{
    "name": "modaly.js",
    "version": "1.0.0",
    "description": "Tiny and easy javascript library for creating web modals.",
    "main": "index.js",
    "scripts": {
        "lint": "eslint **/*.js",
        "lint:fix": "prettier-eslint \"src/**/*.js\" --write",
        "test": "jest",
        "test:watch": "jest --watch",
        "build": "rollup -c"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "npm run lint:fix",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/papeloto/modaly.js.git"
    },
    "keywords": [
        "web",
        "modal",
        "lightweight",
        "simple"
    ],
    "author": "Victor Navarro",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/papeloto/modaly.js/issues"
    },
    "homepage": "https://github.com/papeloto/modaly.js#readme",
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^13.2.0",
        "eslint-plugin-import": "^2.18.2",
        "husky": "^3.0.1",
        "jest": "^24.8.0",
        "lint-staged": "^9.2.1",
        "prettier-eslint": "^9.0.0",
        "prettier-eslint-cli": "^5.0.0",
        "rollup": "^1.17.0",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-uglify": "^6.0.2"
    }
}
