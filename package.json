{
    "name": "modaly.js",
    "version": "0.3.1",
    "description": "Tiny and easy javascript library for creating web modals.",
    "main": "dist/modaly.cjs.js",
    "browser": "dist/modaly.min.js",
    "module": "dist/modaly.esm.js",
    "unpkg": "dist/modaly.min.js",
    "scripts": {
        "lint": "eslint \"./**/*.js\"",
        "lint:fix": "prettier-eslint \"src/**/*.js\" --write",
        "server": "reload -d src --port 5000",
        "test:run": "cypress run",
        "test:open": "cypress open",
        "test": "SET \"NODE_ENV=test\" && server-test server 5000 test:run",
        "coverage:report:text": "nyc report --reporter=text",
        "coverage:report:html": "nyc report --reporter=html",
        "build": "rollup -c",
        "dev": "SET \"NODE_ENV=test\" && server-test server 5000 test:open"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "npm run lint:fix",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/papeloto/modaly.js.git"
    },
    "keywords": [
        "web",
        "modal",
        "simple",
        "lightweight"
    ],
    "author": "Victor Navarro",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/papeloto/modaly.js/issues"
    },
    "homepage": "https://github.com/papeloto/modaly.js#readme",
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "@cypress/code-coverage": "^1.8.0",
        "babel-plugin-istanbul": "^5.2.0",
        "cssnano": "^4.1.10",
        "cypress": "^3.4.1",
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^13.2.0",
        "eslint-plugin-cypress": "^2.6.0",
        "eslint-plugin-import": "^2.18.2",
        "husky": "^3.0.1",
        "istanbul-lib-coverage": "^2.0.5",
        "lint-staged": "^9.2.1",
        "nyc": "^14.1.1",
        "prettier-eslint": "^9.0.0",
        "prettier-eslint-cli": "^5.0.0",
        "reload": "^3.0.1",
        "rollup": "^1.17.0",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-bundle-size": "^1.0.3",
        "rollup-plugin-postcss": "^2.0.3",
        "rollup-plugin-terser": "^5.1.1",
        "start-server-and-test": "^1.9.1"
    }
}
