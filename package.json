{
    "name": "modaly.js",
    "version": "0.1.1",
    "description": "Tiny and easy javascript library for creating web modals.",
    "main": "dist/modaly.min.js",
    "scripts": {
        "lint": "eslint \"./**/*.js\"",
        "lint:fix": "prettier-eslint \"src/**/*.js\" --write",
        "server": "reload -d tests/example --port 5000",
        "server:open": "reload -b -d tests/example --port 5000",
        "test:run": "cypress run",
        "test:open": "cypress open",
        "test": "server-test server 5000 test:run",
        "build": "rollup -c",
        "build:watch": "rollup -c --watch",
        "dev": "run-p build:watch server:open test:open"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "npm run lint:fix",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/papeloto/modaly.js.git"
    },
    "keywords": [
        "web",
        "modal",
        "lightweight",
        "simple"
    ],
    "author": "Victor Navarro",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/papeloto/modaly.js/issues"
    },
    "homepage": "https://github.com/papeloto/modaly.js#readme",
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "cssnano": "^4.1.10",
        "cypress": "^3.4.0",
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^13.2.0",
        "eslint-plugin-cypress": "^2.6.0",
        "eslint-plugin-import": "^2.18.2",
        "husky": "^3.0.1",
        "lint-staged": "^9.2.1",
        "npm-run-all": "^4.1.5",
        "prettier-eslint": "^9.0.0",
        "prettier-eslint-cli": "^5.0.0",
        "reload": "^3.0.1",
        "rollup": "^1.17.0",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-bundle-size": "^1.0.3",
        "rollup-plugin-postcss": "^2.0.3",
        "rollup-plugin-uglify": "^6.0.2",
        "start-server-and-test": "^1.9.1"
    }
}
